count := 0
words := 1
vowels := 0

Read character c

WHILE c â‰  '.' DO
    count := count + 1

    IF c = ' ' THEN
        words := words + 1
    END_IF

    IF c = 'a' OR c = 'e' OR c = 'i' OR c = 'o' OR c = 'u'
       OR c = 'A' OR c = 'E' OR c = 'I' OR c = 'O' OR c = 'U' THEN
        vowels := vowels + 1
    END_IF

    Read character c
END_WHILE

count := count + 1

Output count
Output words
Output vowels

End Algorithm